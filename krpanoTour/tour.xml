	<action name="alpha_enable_layer">
        	set(layer[%1].alpha, %2);
        	set(layer[%1].enabled, %3);   
    </action>

    <action name="alpha_enable">
        	set(hotspot[%1].alpha, %2);
        	set(hotspot[%1].enabled, %3); 
			set(hotspot[%4].alpha, %2);
	</action>

	<action name="removeInfo">
		alpha_enable('random_info_spot', '0', 'false');
		alpha_enable('weiter_button', '0', 'false');
		alpha_enable('info_hotspot_icon', '1', 'true');
	</action>

	<action name= "responsiveMobile">
	showlog();
	trace("Reponsive");
		if(device.mobile,
			trace("how the hell");
			set(layer[exit_button].scale, 0.8);
			set(layer[form].scale, 0.8);
			set(layer[infotext].width, 320 px);
			set(layer[infotext].css, 'font-family:Segoe UI, Tahoma, Geneva, Verdana, sans-serif; color:#eabe8f; text-align: center; font-size: 15px; font-weight:500');
			set(layer[infotext].y, '73%');
			set(layer[infotext2].width, 320 px);
			set(layer[infotext2].css, 'font-family:Segoe UI, Tahoma, Geneva, Verdana, sans-serif; color:#eabe8f; text-align: center; font-size: 15px; font-weight:500');
			set(layer[infotext2].y, '85%');
			set(layer[threehundertsixty_degrees].scale, '0.8');
			set(layer[vr-glasses].scale, '0.8');
			set(layer[label_Cardboard].css, 'font-family:Segoe UI, Tahoma, Geneva, Verdana, sans-serif; color:#eabe8f; text-align: center; font-size: medium; font-weight:500');
			set(layer[label_Cardboard].y, '74%');
			set(layer[label_360].css, 'font-family:Segoe UI, Tahoma, Geneva, Verdana, sans-serif; color:#eabe8f; text-align: center; font-size: medium; font-weight:500');
			set(layer[label_360].y, '74%');

		);
	</action>

	
	
		<!--//////////////////////////////////////////////////////////////////////
	Actions/Functionalitys End
	//////////////////////////////////////////////////////////////////////-->

	<!--//////////////////////////////////////////////////////////////////////
	Scenes
	//////////////////////////////////////////////////////////////////////-->
	
	<scene name="scene_herbstwald_panorama" title="herbstwald_panorama" onstart="textChanger();
	responsiveMobile();" lat="" lng="" heading="">
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/herbstwald_panorama.tiles/preview.jpg" />

		<image>
			<cube url="panos/herbstwald_panorama.tiles/%s/l%l/%v/l%l_%s_%v_%h.jpg" multires="512,640,1280" />
		</image>

		<hotspot name="info_hotspot_icon" style="skin_hotspotstyle_info" ath="25" atv="17" alpha="0" enabled="false" 
			onclick="random_info('Wusstest du dass Wälder länger halten wenn man sie nicht anzündet?')" 
		/>

		<hotspot name="arrow_hotspot" style="skin_hotspotstyle_arrow" ath="25" atv="17" alpha="0" enabled="false" 
			onclick="loadscene(scene_herbstwald_panorama_2)"
		/>

		<hotspot name="info_text" style="skin_hotspotstyle_info_text" html=""
		ath="0" atv="0" alpha="0" enabled="false"/>

		<hotspot name="info_text_moving" style="skin_hotspotstyle_info_text" html="Mithilfe der Pfeile bewegst du dich im Wald an verschiedene Stellen.
			Fokussiere den Pfeil um dich zu bewegen"
		ath="0" atv="0" alpha="0" enabled="false"/>

	</scene> 

	<scene name="scene_herbstwald_panorama_2" title="herbstwald_panorama_2" 
		onstart="alpha_enable('info_text_finished', '1', 'false'); 
		delayedcall(5, removehotspot(info_text_finished));
		delayedcall(5, set(hotspot[info_hotspot_icon].enabled, true))" lat="" lng="" heading=""> -->
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/herbstwald_panorama.tiles/preview.jpg" />

		<image>
			<cube url="panos/herbstwald_panorama.tiles/%s/l%l/%v/l%l_%s_%v_%h.jpg" multires="512,640,1280" />
		</image>

	<hotspot name="info_hotspot_icon" style="skin_hotspotstyle_info" ath="-49" atv="10" alpha="1" enabled="false" 
		onclick="random_info('Wusstest du dass Wälder länger halten wenn man sie nicht anzündet?'); set(hotspot[weiter_button].onclick, removeInfo())" 
	/>
